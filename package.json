{
  "name": "ccv-website-experimental",
  "version": "1.0.0",
  "private": true,
  "description": "CCV Website Experimental in Nuxt.js",
  "author": "fernandogelin",
  "scripts": {
    "build": "nuxt build",
    "serve": "firebase serve -P qa --only functions,hosting",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "commit": "git-cz",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "start": "nuxt start",
    "test": "jest",
    "fn-install": "cp .npmrc functions/.npmrc && cd functions && npm ci",
    "predeploy": "./predeploy.sh",
    "prod-deploy": "firebase deploy -P prod",
    "qa-deploy": "firebase deploy -P qa"
  },
  "dependencies": {
    "@brown-ccv/disco-styles": "^2.2.2",
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/markdownit": "^1.2.10",
    "bulma": "^0.9.0",
    "bulma-checkradio": "^1.1.1",
    "nuxt": "2.15.4"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/pro-duotone-svg-icons": "^5.15.1",
    "@fortawesome/pro-light-svg-icons": "^5.15.1",
    "@fortawesome/pro-regular-svg-icons": "^5.15.1",
    "@fortawesome/pro-solid-svg-icons": "^5.15.1",
    "@fortawesome/vue-fontawesome": "2",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^9.10.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "node-sass": "^4.14.1",
    "nuxt-svg-loader": "^1.2.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.12.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  }
}
