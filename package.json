{
  "name": "ccv-website-experimental",
  "version": "1.0.0",
  "private": true,
  "description": "CCV Website Experimental in Nuxt.js",
  "author": "fernandogelin",
  "scripts": {
    "build": "nuxt build",
    "preserve": "cd functions && firebase functions:config:get > .runtimeconfig.json && cd ..",
    "serve": "firebase serve -P qa --only functions,hosting",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "commit": "git-cz",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "start": "nuxt start",
    "test": "jest",
    "fn-install": "cp .npmrc functions/.npmrc && cd functions && npm ci",
    "predeploy": "./predeploy.sh",
    "local-deploy": "npm run generate && npm run build && npm run predeploy && npm run serve",
    "prod-deploy": "firebase deploy -P prod",
    "qa-deploy": "firebase deploy -P qa",
    "prepare": "husky install"
  },
  "dependencies": {
    "@nuxt/content": "^1.14.0",
    "@nuxtjs/markdownit": "^1.2.10",
    "axios": "^0.21.1",
    "bulma": "^0.9.0",
    "bulma-checkradio": "^1.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "nuxt": "2.15.4"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "firebase-tools": "^9.10.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.0.0",
    "node-sass": "^4.14.1",
    "nuxt-svg-loader": "^1.2.0",
    "prettier": "^1.19.1",
    "sass-loader": "^10.1.1",
    "stylelint": "^13.13.0"
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint"
  },
  "stylelint": {
    "rules": {}
  }
}
