{
  "name": "ccv-website-experimental",
  "version": "1.0.0",
  "private": true,
  "description": "CCV Website Experimental in Nuxt.js",
  "author": "fernandogelin",
  "scripts": {
    "build": "nuxt build",
    "serve": "firebase serve --only functions,hosting",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "commit": "git-cz",
    "dev": "nuxt",
    "generate": "nuxt generate",
    "start": "nuxt start",
    "test": "jest",
    "predeploy": "rm -rf public/* && mkdir -p public/_nuxt && cp -r .nuxt functions && cp -r functions/.nuxt/dist/client/ public/_nuxt && cp -a static/* public/ && cp nuxt.config.js functions && cp -r content functions/content",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "@brown-ccv/disco-styles": "^2.2.2",
    "@brown-ccv/disco-vue-components": "^1.2.3",
    "@nuxt/content": "^1.9.0",
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/dotenv": "^1.4.0",
    "@nuxtjs/markdownit": "^1.2.10",
    "bulma": "^0.9.0",
    "bulma-checkradio": "^1.1.1",
    "frontmatter-markdown-loader": "^3.4.3",
    "nuxt": "^2.14.6",
    "v-runtime-template": "^1.10.0",
    "vue-scrollto": "^2.19.1"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/pro-duotone-svg-icons": "^5.15.1",
    "@fortawesome/pro-light-svg-icons": "^5.15.1",
    "@fortawesome/pro-regular-svg-icons": "^5.15.1",
    "@fortawesome/pro-solid-svg-icons": "^5.15.1",
    "@nuxt/components": "^1.1.0",
    "@nuxtjs/eslint-config": "^2.0.0",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@nuxtjs/fontawesome": "^1.1.2",
    "@nuxtjs/stylelint-module": "^3.1.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.1.2",
    "firebase-tools": "^9.10.0",
    "git-cz": "^4.3.1",
    "husky": "^4.0.0",
    "jest": "^26",
    "lint-staged": "^10.0.0",
    "node-sass": "^4.14.1",
    "nuxt-svg-loader": "^1.2.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.12.0",
    "vue-cli-plugin-cz": "^1.2.2",
    "vue-jest": "^4.0.0-0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,vue}": "npm run lint",
    "*.{css,vue}": "stylelint"
  }
}
